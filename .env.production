# Thirsty's Waterfall - Production Environment Configuration
# ============================================================
# 
# This file contains production environment variables for the web interface.
# Copy this to `.env` and customize as needed.
#
# SECURITY WARNING: Never commit the .env file to version control!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Number of Gunicorn worker processes
# Formula: (2 Ã— CPU cores) + 1
# Adjust based on your server's CPU count
WORKERS=4

# Worker class for WebSocket support
# Options: sync, gevent, eventlet
WORKER_CLASS=gevent

# Debug mode (false for production)
DEBUG=false

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Session secret (CHANGE THIS!)
SECRET_KEY=your-super-secret-session-key-change-this-in-production

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per minute
RATE_LIMIT=100

# =============================================================================
# FEATURES
# =============================================================================

# Application environment
THIRSTYS_ENV=production

# Enable/disable features
ENABLE_API=true
ENABLE_WEBSOCKET=true

# =============================================================================
# PERFORMANCE
# =============================================================================

# Worker timeout (seconds)
TIMEOUT=120

# Keep-alive timeout (seconds)
KEEPALIVE=5

# Max requests per worker before restart (prevents memory leaks)
MAX_REQUESTS=1000

# =============================================================================
# DATABASE (if needed in future)
# =============================================================================

# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# =============================================================================
# EXTERNAL SERVICES (if needed)
#============================================================================

# API_KEY=your-api-key
# EXTERNAL_SERVICE_URL=https://api.example.com
